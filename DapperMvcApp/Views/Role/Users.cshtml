@model IEnumerable<DapperMvcApp.Models.Entities.Role>

<h2>Группы пользователей</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>
                <a asp-controller="Role" asp-action="UsersInRole" asp-route-id="@role.Id">@role.Name</a>
            </td>            
            <td>                
                <ol>
                    @foreach (var user in role.Users)
                    {
                        if (user != null)
                        {
                            <li>
                                <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id">@user.Name</a>
                            </li>
                        }
                    }
                </ol>                
             </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">Изменить</a>
            </td>
        </tr>
    }
</table>