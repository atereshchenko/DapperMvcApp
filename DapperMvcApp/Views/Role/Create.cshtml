@model DapperMvcApp.Models.Entities.Role
@{
    ViewData["Title"] = "Новая роль";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" asp-controller="Role">
    <div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control form-control-sm" />
        </div>       
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Role" asp-action="Index">Вернуться к списку</a>
</div>