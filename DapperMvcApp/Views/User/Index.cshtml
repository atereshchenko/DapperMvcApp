@model IEnumerable<DapperMvcApp.Entities.User>
@{
    ViewData["Title"] = "Список пользователей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="User" asp-action="Create">Добавить</a>
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td><a asp-controller="User" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></td>
            <td>@item.Email</td>
            <td>@item.Age</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                <a class="btn btn-sm btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
